<Window x:Class="FilmFlow.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmFlow.MainWindow"
        xmlns:viewModel="clr-namespace:FilmFlow.MainWindow.MainWindowViewModel"
        mc:Ignorable="d"
        Title="FilmFlow" Height="600" Width="900"
        MinHeight="480" MinWidth="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Icon="/Images/Logo.png">
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary Source="/CustomControls/CustomScroll.xaml"/>
    </Window.Resources>
    <Border CornerRadius="12">
        <Border CornerRadius="10,10,0,0"
        BorderThickness="6">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource MainBackgroundColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource MainBackgroundColor2}" Offset="0.6"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="{StaticResource MainBackgroundColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource MainBackgroundColor2}" Offset="0.7"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ListBoxPanel"
                    Width="Auto">
                    <ComboBox Width="Auto" 
                              Height="26" 
                              HorizontalAlignment="Right"
                              ItemsSource="{Binding Genres}"
                              SelectedValue="{Binding CurrentGenre}"
                              VerticalContentAlignment="Center"
                              Margin="15"/>
                    <Button Content="{Binding CurrentLanguage, UpdateSourceTrigger=PropertyChanged}"
                            Width="Auto"
                            Height="Auto"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="15"
                            Padding="5"
                            Command="{Binding languageChanged}"/>
                    <ListBox ItemsSource="{Binding Movies}" 
                             Background="Transparent" 
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectedIndex="{Binding SelectedMovie}">
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Margin" Value="50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Resources>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" 
                                           MaxWidth="{Binding ActualWidth, ElementName=ListBoxPanel}"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.Template>
                            <ControlTemplate>
                                <ItemsPresenter/>
                            </ControlTemplate>
                        </ListBox.Template>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,15,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="240"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding Cover}" 
                                           Stretch="Uniform" 
                                           Grid.Row="0" 
                                           Visibility="Hidden"/>
                                    <Border CornerRadius="10" 
                                            Grid.Row="0" 
                                            Width="Auto">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Cover}" 
                                                        Stretch="Uniform"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock FontSize="{StaticResource Regular}"
                                               Foreground="{StaticResource TextColor}"
                                               Grid.Row="1"
                                               Margin="5,5,0,30"
                                               TextWrapping="Wrap"
                                               MaxWidth="180">
                                        <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Border>
</Window>
