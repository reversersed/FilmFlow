                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="11"
                                Margin="0,10,0,5">
                    <TextBlock Margin="10,0,0,5"
                                   Text="{StaticResource modCountry}"
                                   Foreground="{StaticResource TextColor}"
                                   FontFamily="{StaticResource DefaultFont}"
                                   FontSize="{StaticResource Regular}"
                                   FontWeight="DemiBold"/>
                    <TextBox Height="30"
                             Foreground="{StaticResource TextColor}"
                             CaretBrush="{StaticResource LightTextColor}"
                             FontFamily="{StaticResource DefaultFont}"
                             FontSize="{StaticResource Regular}"
                             Text="{Binding CountrySearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="128"
                             TextAlignment="Left"
                             Width="250"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Padding="5,0,5,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border x:Name="border"
                                                        BorderBrush="{StaticResource LightAccentColor}"
                                                        BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  Focusable="False"
                                                                  HorizontalScrollBarVisibility="Disabled"
                                                                  VerticalScrollBarVisibility="Disabled"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ListView ItemsSource="{Binding SelectedCountries}"
                                  Margin="0,5,0,0"
                                  VerticalAlignment="Top"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="5" Padding="5,2,5,2" Margin="2">
                                    <Border.Background>
                                        <SolidColorBrush Color="{StaticResource LightAccentColorKey}" Opacity="0.6"/>
                                    </Border.Background>
                                    <WrapPanel>
                                        <Button Command="{Binding DataContext.UnmarkCountry, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding Id}">
                                            <Button.Content>
                                                <fa:IconImage Icon="Close" Foreground="{StaticResource LightAccentColor}" Width="14" Height="14"/>
                                            </Button.Content>
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="2" Height="20" Width="20">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <TextBlock Text="{Binding Name}"
                                                       Margin="5,0,0,0"
                                                       TextWrapping="Wrap"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextColor}"
                                                       FontSize="{StaticResource Small}"
                                                       FontFamily="{StaticResource DefaultFont}"
                                                       FontWeight="Light"/>
                                    </WrapPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Background="Transparent"
                                                        IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.Template>
                            <ControlTemplate>
                                <ItemsPresenter/>
                            </ControlTemplate>
                        </ListView.Template>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <Border BorderBrush="{StaticResource LightAccentColor}" BorderThickness="0,2,0,0" Margin="0,5,0,5">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCountries.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    <ListView ItemsSource="{Binding ShowedCountries}"
                                  VerticalAlignment="Top"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="5" Padding="5,2,5,2" Margin="2">
                                    <Border.Background>
                                        <SolidColorBrush Color="{StaticResource LightAccentColorKey}" Opacity="0.6"/>
                                    </Border.Background>
                                    <WrapPanel>
                                        <Button Command="{Binding DataContext.SelectCountry, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding Id}">
                                            <Button.Content>
                                                <fa:IconImage Icon="Plus" Foreground="{StaticResource LightAccentColor}" Width="14" Height="14"/>
                                            </Button.Content>
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="2" Height="20" Width="20">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <TextBlock Text="{Binding Name}"
                                                       Margin="5,0,0,0"
                                                       TextWrapping="Wrap"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource TextColor}"
                                                       FontSize="{StaticResource Small}"
                                                       FontFamily="{StaticResource DefaultFont}"
                                                       FontWeight="Light"/>
                                    </WrapPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Background="Transparent"
                                                Orientation="Vertical"
                                                IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.Template>
                            <ControlTemplate>
                                <ItemsPresenter/>
                            </ControlTemplate>
                        </ListView.Template>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Column="3"
                           Grid.Row="1"
                           Margin="10,0,0,0"
                           Height="Auto"
                           Orientation="Horizontal">
                <!--Cover image-->
                <Grid   Width="200"
                            Height="Auto"
                            Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBox Height="30"
                                 Grid.Row="0"
                                 Foreground="{StaticResource TextColor}"
                                 CaretBrush="{StaticResource LightTextColor}"
                                 FontFamily="{StaticResource DefaultFont}"
                                 FontSize="{StaticResource Regular}"
                                 Text="{Binding AddMovieModel.Cover, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MaxLength="128"
                                 TextAlignment="Left"
                                 Width="200"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 VerticalContentAlignment="Center"
                                 Padding="5,0,5,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border x:Name="border"
                                                    BorderBrush="{StaticResource LightAccentColor}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                              Focusable="False"
                                                              HorizontalScrollBarVisibility="Disabled"
                                                              VerticalScrollBarVisibility="Disabled"/>
                                                    <TextBlock Text="{StaticResource MovieCoverUrl}"
                                                               x:Name="placeholderText"
                                                               IsEnabled="False"
                                                               Panel.ZIndex="-1"
                                                               Foreground="{StaticResource DarkTextColor}"
                                                               FontSize="{StaticResource Small}"
                                                               FontFamily="{StaticResource DefaultFont}"
                                                               VerticalAlignment="Center"
                                                               Visibility="Collapsed"
                                                               Margin="10,0,0,0">
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                </Trigger>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Visibility" TargetName="placeholderText" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Image Source="{Binding AddMovieModel.Cover}"
                               MaxWidth="200"
                               Stretch="Uniform"
                               Grid.Row="1"
                               Margin="0,10,0,0">
                    </Image>
                </Grid>
                <!--Movie url-->
                <StackPanel Orientation="Vertical"
                                Width="Auto"
                                Height="Auto"
                                Margin="0,0,15,0">
                    <TextBox Height="30"
                                 Foreground="{StaticResource TextColor}"
                                 CaretBrush="{StaticResource LightTextColor}"
                                 FontFamily="{StaticResource DefaultFont}"
                                 FontSize="{StaticResource Regular}"
                                 Text="{Binding MovieUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextAlignment="Left"
                                 Width="800"
                                 Margin="0,0,0,15"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="5,0,5,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border x:Name="border"
                                                    BorderBrush="{StaticResource LightAccentColor}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                              Focusable="False"
                                                              HorizontalScrollBarVisibility="Disabled"
                                                              VerticalScrollBarVisibility="Disabled"/>
                                                    <TextBlock Text="{StaticResource MovieVideoUrl}"
                                                               x:Name="placeholderText"
                                                               IsEnabled="False"
                                                               Panel.ZIndex="-1"
                                                               Foreground="{StaticResource DarkTextColor}"
                                                               FontSize="{StaticResource Small}"
                                                               FontFamily="{StaticResource DefaultFont}"
                                                               VerticalAlignment="Center"
                                                               Visibility="Collapsed"
                                                               Margin="10,0,0,0">
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                </Trigger>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Visibility" TargetName="placeholderText" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Grid>
                        <customControl:VideoPlayer SourceUrl="{Binding MovieUrl}"
                                                       BorderBrush="{StaticResource LightAccentColor}"
                                                       BorderThickness="1"
                                                       Width="800"
                                                       Height="450"
                                                       HorizontalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2"
                            Grid.ColumnSpan="4"
                            Width="Auto"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                <Button Content="{StaticResource InsertMovieButton}"
                            Foreground="{StaticResource TextColor}"
                            FontFamily="{StaticResource DefaultFont}"
                            FontSize="{StaticResource Regular}"
                            Command="{Binding InsertMovie}"
                            Width="130"
                            Cursor="Hand"
                            Margin="0,0,0,5">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Setters>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Padding="10,5,10,5"
                                                        BorderBrush="{StaticResource LightAccentColor}"
                                                        BorderThickness="2"
                                                        CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style.Setters>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock Text="{Binding Error}"
                               Foreground="{StaticResource LightAccentColor}"
                               FontFamily="{StaticResource DefaultFont}"
                               TextWrapping="Wrap"
                               FontSize="{StaticResource Small}"
                               FontWeight="Light"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
