<UserControl x:Class="FilmFlow.MainWindow.NavigationViews.MovieView.MovieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmFlow.MainWindow.NavigationViews.MovieView"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:customControl="clr-namespace:FilmFlow.CustomControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:MovieViewModel}"
             d:DesignHeight="1500" d:DesignWidth="1675">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CustomControls/CustomScroll.xaml"/>
                <ResourceDictionary Source="/CustomControls/ReviewsBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:RatingConverter x:Key="RatingToBar"/>
            <local:PlayerHeightConverter x:Key="PlayerHeightConverter"/>
            <local:DateReviewConverter x:Key="DateReviewConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0"
                              Width="0.01*"
                              MaxWidth="198"/>
            <ColumnDefinition MaxWidth="1280"
                              MinWidth="350"/>
            <ColumnDefinition MinWidth="0"
                              Width="0.01*"
                              MaxWidth="198"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="{StaticResource MainBackgroundColor}"/>
        <Border Grid.Column="2" Background="{StaticResource MainBackgroundColor}"/>

        <!--Main section-->
        <ScrollViewer   Grid.Column="1"
                        Focusable="False"
                        Background="{StaticResource ToolTipBackground}"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto">
            <Grid Margin="15,10,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MaxHeight="600"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto" MaxHeight="400"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!--About film-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                                MaxWidth="200"
                                CornerRadius="15">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding Path=Movie.Cover}"
                                   Stretch="Uniform"/>
                        </Border.Background>
                        <Image Source="{Binding Path=Movie.Cover}"
                                   Stretch="Uniform"
                                   MaxWidth="300"
                                   Visibility="Hidden"/>
                    </Border>

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                       Text="{Binding Movie.Name}"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="{StaticResource Regular}"
                                       TextWrapping="Wrap"
                                       FontFamily="{StaticResource DefaultFont}"
                                       FontWeight="DemiBold" Grid.ColumnSpan="2"/>

                        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,40,0,0" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MaxWidth="250"
                                                      MinWidth="150"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="15"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="0"
                                            Grid.Column="0"
                                            Text="{StaticResource ReleaseYear}"
                                            HorizontalAlignment="Left"
                                            Foreground="{StaticResource LightTextColor}"
                                            FontSize="{StaticResource Small}"
                                            FontFamily="{StaticResource DefaultFont}"
                                            FontWeight="Normal"/>
                            <TextBlock  Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding Movie.Year}"
                                            HorizontalAlignment="Left"
                                            Foreground="{StaticResource TextColor}"
                                            FontSize="{StaticResource Small}"
                                            FontFamily="{StaticResource DefaultFont}"
                                            FontWeight="Normal"/>

                            <TextBlock  Grid.Row="2"
                                            Grid.Column="0"
                                            Text="{StaticResource Genres}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Foreground="{StaticResource LightTextColor}"
                                            FontSize="{StaticResource Small}"
                                            FontFamily="{StaticResource DefaultFont}"
                                            FontWeight="Normal"/>
                            <TextBlock  Grid.Row="2"
                                            Grid.Column="1"
                                            Text="{Binding GenreString, Mode=OneWay}"
                                            TextWrapping="Wrap"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Foreground="{StaticResource TextColor}"
                                            FontSize="{StaticResource Small}"
                                            FontFamily="{StaticResource DefaultFont}"
                                            FontWeight="Normal"/>

                            <TextBlock  Grid.Row="3"
                                            Grid.Column="0"
                                            Text="{StaticResource Rating}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Foreground="{StaticResource LightTextColor}"
                                            FontSize="{StaticResource Small}"
                                            FontFamily="{StaticResource DefaultFont}"
                                            FontWeight="Normal"/>
                            <Grid   Grid.Row="3"
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="125"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <ProgressBar Value="{Binding Path=Movie.Rating, Converter={StaticResource RatingToBar}, UpdateSourceTrigger=PropertyChanged}"/>
                                    <StackPanel HorizontalAlignment="Left"
                                                            Orientation="Horizontal">
                                        <customControl:StarShape/>
                                        <customControl:StarShape/>
                                        <customControl:StarShape/>
                                        <customControl:StarShape/>
                                        <customControl:StarShape/>
                                    </StackPanel>
                                </Grid>
                                <TextBlock  Text="{Binding Movie.Rating, StringFormat=F1, UpdateSourceTrigger=PropertyChanged}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Left"
                                                TextAlignment="Left"
                                                Grid.Column="2"
                                                FontWeight="DemiBold"
                                                FontSize="{StaticResource Regular}"
                                                FontFamily="{StaticResource DefaultFont}"
                                                Foreground="{StaticResource TextColor}"/>
                                <StackPanel Grid.Column="4"
                                                VerticalAlignment="Bottom"
                                                Margin="0,0,0,2"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                    <TextBlock Text="{Binding Movie.ReviewCount, UpdateSourceTrigger=PropertyChanged}"
                                                           FontSize="{StaticResource Small}"
                                                           FontFamily="{StaticResource DefaultFont}"
                                                           FontWeight="ExtraLight"
                                                           Foreground="{StaticResource LightTextColor}"/>
                                    <TextBlock Text="{StaticResource Reviews}"
                                                           FontSize="{StaticResource Small}"
                                                           FontFamily="{StaticResource DefaultFont}"
                                                           FontWeight="ExtraLight"
                                                           Margin="5,0,0,0"
                                                           Foreground="{StaticResource LightTextColor}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <TextBlock  Grid.Row="1"
                                Text="{StaticResource Description}"
                                Foreground="{StaticResource TextColor}"
                                FontSize="{StaticResource Regular}"
                                TextWrapping="Wrap"
                                VerticalAlignment="Bottom"
                                Margin="15,0,0,10"
                                FontFamily="{StaticResource DefaultFont}"
                                FontWeight="DemiBold"/>
                <Border Grid.Row="2"
                            BorderThickness="2"
                            BorderBrush="{StaticResource LightAccentColor}"
                            CornerRadius="15"
                            MaxWidth="600"
                            Padding="10,5,10,5"
                            HorizontalAlignment="Left">
                    <TextBlock  Text="{Binding Movie.Desription}"
                                    Foreground="{StaticResource TextColor}"
                                    FontSize="{StaticResource Regular}"
                                    TextWrapping="Wrap"
                                    FontFamily="{StaticResource DefaultFont}"
                                    FontWeight="Light"/>
                </Border>
                <Grid Grid.Row="3"
                      Margin="30,20,30,0"
                      Width="Auto"
                      Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth, Converter={StaticResource PlayerHeightConverter}}">
                    <customControl:VideoPlayer  BorderBrush="{StaticResource DarkAccentColor}"
                                                BorderThickness="1"
                                                SourceUrl="{Binding Movie.Url}"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"/>
                </Grid>
                <Grid Grid.Row="4"
                      Margin="20,30,20,0"
                      Height="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!--Writing-->
                        <RowDefinition Height="15"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid   Grid.Row="0"
                                VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{StaticResource Review}"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="{StaticResource Big}"
                                       FontWeight="DemiBold"
                                       Grid.Column="0"
                                       VerticalAlignment="Bottom"
                                       FontFamily="{StaticResource DefaultFont}"/>
                            <Grid   Grid.Column="2"
                                    VerticalAlignment="Center">
                                <ProgressBar MouseMove="BarMoved"
                                             MouseLeave="BarLeaved"
                                             MouseDown="BarClicked"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch"
                                             Value="{Binding RatingValue, Converter={StaticResource RatingToBar}}">
                                    <ProgressBar.Style>
                                        <Style TargetType="{x:Type ProgressBar}">
                                            <Setter Property="Foreground" Value="{StaticResource LightAccentColor}"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="Width" Value="125"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                        <Grid Name="TemplateRoot" SnapsToDevicePixels="true">
                                                            <Border 
                                                                Name="PART_Track"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}" />
                                                            <Border 
                                                                Name="PART_Indicator"
                                                                Background="{TemplateBinding Foreground}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                HorizontalAlignment="Left" />
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                                <StackPanel HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Orientation="Horizontal">
                                    <customControl:StarShape/>
                                    <customControl:StarShape/>
                                    <customControl:StarShape/>
                                    <customControl:StarShape/>
                                    <customControl:StarShape/>
                                </StackPanel>
                            </Grid>
                            <TextBlock  Grid.Column="4"
                                        Text="{Binding RatingValue, StringFormat=F1}"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Regular}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        VerticalAlignment="Bottom"
                                        FontWeight="DemiBold"/>
                        </Grid>
                        <TextBox    Grid.Row="1"
                                    Margin="0,10,0,0"
                                    Foreground="{StaticResource TextColor}"
                                    Height="200"
                                    Width="600"
                                    CaretBrush="{StaticResource LightTextColor}"
                                    FontFamily="{StaticResource DefaultFont}"
                                    FontSize="{StaticResource Regular}"
                                    Text="{Binding ReviewText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left"
                                    VerticalContentAlignment="Top"
                                    HorizontalAlignment="Left"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    AcceptsTab="True"
                                    Padding="8">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Border x:Name="border"
                                                        CornerRadius="2"
                                                        BorderBrush="{StaticResource LightAccentColor}"
                                                        BorderThickness="1,1,1,1">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                              Focusable="False"
                                                              HorizontalScrollBarVisibility="Disabled"
                                                              VerticalScrollBarVisibility="Auto"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentColor}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Row="2"
                                Content="{StaticResource SendReview}"
                                FontFamily="{StaticResource DefaultFont}"
                                FontSize="{StaticResource Small}"
                                Width="Auto"
                                Command="{Binding SendReview}"
                                HorizontalAlignment="Left"
                                Cursor="Hand"
                                Margin="5,10,0,0">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Setters>
                                        <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Padding="20,5,20,5"
                                                            x:Name="buttonBorder"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="2"
                                                            CornerRadius="15">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="BorderBrush" Value="{StaticResource DarkAccentColor}"/>
                                            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2"
                          MinWidth="600"
                          MaxWidth="1200"
                          Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                          HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   HorizontalAlignment="Left"
                                   Foreground="{StaticResource TextColor}"
                                   FontFamily="{StaticResource DefaultFont}"
                                   FontSize="{StaticResource Big}"
                                   FontWeight="DemiBold"
                                   Text="{StaticResource ReviewList}"/>
                        <ListView   ItemsSource="{Binding Path=Reviews, UpdateSourceTrigger=PropertyChanged}"
                                    HorizontalContentAlignment="Left"
                                    Grid.Row="1">
                            <ListView.Template>
                                <ControlTemplate>
                                    <ItemsPresenter/>
                                </ControlTemplate>
                            </ListView.Template>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource LightAccentColor}"
                                            BorderThickness="0,0,0,2"
                                            Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                            MinWidth="{Binding Path=MinWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                            Padding="0,10,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,10"
                                                        Grid.Row="0">
                                                <StackPanel Orientation="Vertical"
                                                            Margin="0,0,15,0">
                                                <TextBlock Text="{Binding WriteDate, Converter={StaticResource DateReviewConverter}}"
                                                           Foreground="{StaticResource LightTextColor}"
                                                           FontFamily="{StaticResource DefaultFont}"
                                                           FontSize="{StaticResource Small}"
                                                           FontWeight="Light"/>
                                                <TextBlock Text="{Binding User.Username}"
                                                           Foreground="{StaticResource LightTextColor}"
                                                           FontFamily="{StaticResource DefaultFont}"
                                                           FontSize="{StaticResource Small}"
                                                           Margin="0,5,0,0"
                                                           FontWeight="Light"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <TextBlock Grid.Row="1"
                                                       TextWrapping="Wrap"
                                                       Text="{Binding ReviewText}"
                                                       Foreground="{StaticResource TextColor}"
                                                       FontFamily="{StaticResource DefaultFont}"
                                                       FontSize="{StaticResource Regular}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel  IsItemsHost="True"
                                                Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
