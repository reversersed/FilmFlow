<UserControl x:Class="FilmFlow.MainWindow.NavigationViews.MovieView.MovieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmFlow.MainWindow.NavigationViews.MovieView"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:customControl="clr-namespace:FilmFlow.CustomControls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:popupConfirm="clr-namespace:ModalControl;assembly=ModalControl" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:MovieViewModel}"
             d:DesignHeight="1500" d:DesignWidth="1675">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CustomControls/CustomScroll.xaml"/>
                <ResourceDictionary Source="/CustomControls/ComboBox.xaml"/>
                <ResourceDictionary Source="/CustomControls/ReviewsBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:RatingConverter x:Key="RatingToBar"/>
            <local:PlayerHeightConverter x:Key="PlayerHeightConverter"/>
            <local:DateReviewConverter x:Key="DateReviewConverter"/>
            <local:ReducePageConverter x:Key="PageConverter"/>
            <local:EqualityConverter x:Key="Equality"/>
            <local:MoreThanConverter x:Key="MoreThan"/>
            <local:FavouriteToiconFont x:Key="FavToFont"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0"
                              Width="0.01*"
                              MaxWidth="198"/>
            <ColumnDefinition MaxWidth="1280"
                              MinWidth="350"/>
            <ColumnDefinition MinWidth="0"
                              Width="0.01*"
                              MaxWidth="198"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="{StaticResource MainBackgroundColor}"/>
        <Border Grid.Column="2" Background="{StaticResource MainBackgroundColor}"/>

        <!--Modal PopUp for confirmation-->
        <popupConfirm:Modal Panel.ZIndex="1"
                            IsOpen="{Binding ConfirmationVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Grid.ColumnSpan="3">
            <StackPanel Width="300"
                        Height="200"
                        Orientation="Vertical"
                        Background="{StaticResource NavigationColor}">
                <TextBlock Text="{StaticResource Confirmation}"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Regular}"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="DemiBold"/>
                <TextBlock Text="{Binding ConfirmationText}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,25,0,0"
                               Width="280"
                               TextWrapping="Wrap"
                               Height="100"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Small}"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="Normal"/>
                <StackPanel Margin="0,10,0,0"
                            Height="Auto"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Width="Auto">
                    <Button BorderThickness="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{StaticResource Yes}"
                            Command="{Binding ConfirmationCommand}"
                            CommandParameter="yes"
                            Foreground="{StaticResource TextColor}"
                            FontSize="{StaticResource Regular}"
                            FontFamily="{StaticResource DefaultFont}"
                            Cursor="Hand"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource LightAccentColor}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5" Padding="10,5,10,5" Background="{TemplateBinding Background}" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button BorderThickness="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{StaticResource No}"
                            Command="{Binding ConfirmationCommand}"
                            CommandParameter="no"
                            Foreground="{StaticResource TextColor}"
                            FontSize="{StaticResource Regular}"
                            FontFamily="{StaticResource DefaultFont}"
                            Cursor="Hand"
                            Margin="10,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5" Padding="10,5,10,5" Background="{TemplateBinding Background}" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button BorderThickness="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{StaticResource Cancel}"
                            Command="{Binding ConfirmationCommand}"
                            CommandParameter="cancel"
                            Foreground="{StaticResource TextColor}"
                            FontSize="{StaticResource Regular}"
                            FontFamily="{StaticResource DefaultFont}"
                            Cursor="Hand"
                            Margin="20,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsBanConfirmationOpened}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5" Padding="10,5,10,5" Background="{TemplateBinding Background}" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </popupConfirm:Modal>

        <!--Main section-->
        <ScrollViewer   Grid.Column="1"
                        Focusable="False"
                        Background="{StaticResource SecondaryBackgroundColor}"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto">
            <Grid Margin="15,10,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MaxHeight="600"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto" MaxHeight="400"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!--About film-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                                MaxWidth="200"
                                CornerRadius="15">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding Path=Movie.Cover}"
                                   Stretch="Uniform"/>
                        </Border.Background>
                        <Image Source="{Binding Path=Movie.Cover}"
                                   Stretch="Uniform"
                                   MaxWidth="300"
                                   Visibility="Hidden"/>
                    </Border>

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                       Text="{Binding Movie.Name}"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="{StaticResource Regular}"
                                       TextWrapping="Wrap"
                                       FontFamily="{StaticResource DefaultFont}"
                                       FontWeight="DemiBold" Grid.ColumnSpan="2"/>

                        <ToggleButton Grid.Row="0"
                                      Grid.ColumnSpan="2"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,15,0"
                                      IsChecked="{Binding Movie.IsInFavourite}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding FavouriteState}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                            <fa:IconImage Icon="Heart"
                                          Width="32"
                                          Height="32"
                                          IconFont="{Binding Movie.IsInFavourite, Converter={StaticResource FavToFont}}">
                                <fa:IconImage.Style>
                                    <Style TargetType="{x:Type fa:IconImage}">
                                        <Setter Property="Foreground" Value="{StaticResource LightAccentColor}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </fa:IconImage.Style>
                            </fa:IconImage>
                        </ToggleButton>

                        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MaxWidth="250"
                                                      MinWidth="150"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="15"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="0"
                                            Grid.Column="0"
                                            Text="{StaticResource ReleaseYear}"
                                            HorizontalAlignment="Left"
                                            Foreground="{StaticResource LightTextColor}"
                                            FontSize="{StaticResource Small}"
                                            FontFamily="{StaticResource DefaultFont}"
                                            FontWeight="Normal"/>
                            <TextBlock  Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding Movie.Year}"
                                            HorizontalAlignment="Left"
                                            Foreground="{StaticResource TextColor}"
                                            FontSize="{StaticResource Small}"
                                            FontFamily="{StaticResource DefaultFont}"
                                            FontWeight="Normal"/>

                            <TextBlock  Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Country}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CountryString}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding CountryString, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CountryString}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Genres}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal"/>
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding GenreString, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal"/>

                            <TextBlock  Grid.Row="3"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Tagline}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Tagline}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Tagline}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="3"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding Movie.Tagline, Mode=OneWay, StringFormat='{}«{0}»'}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Tagline}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Tagline}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock  Grid.Row="4"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Director}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Director}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Director}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="4"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding Movie.Director, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Director}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Director}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock  Grid.Row="5"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Screenwriter}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Screenwriter}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Screenwriter}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="5"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding Movie.Screenwriter, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Screenwriter}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Screenwriter}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock  Grid.Row="6"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Producer}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Producer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Producer}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="6"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding Movie.Producer, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Producer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Producer}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock  Grid.Row="7"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Videographer}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Videographer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Videographer}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="7"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding Movie.Videographer, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Videographer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Videographer}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock  Grid.Row="8"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Composer}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Composer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Composer}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="8"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding Movie.Composer, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Composer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Composer}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock  Grid.Row="9"
                                        Grid.Column="0"
                                        Margin="0,2,0,0"
                                        Text="{StaticResource Drawer}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource LightTextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Drawer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movie.Drawer}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock  Grid.Row="9"
                                        Grid.Column="1"
                                        Margin="0,2,0,0"
                                        Text="{Binding Movie.Drawer, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="{StaticResource TextColor}"
                                        FontSize="{StaticResource Small}"
                                        FontFamily="{StaticResource DefaultFont}"
                                        FontWeight="Normal">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movie.Drawer}" Value="{x:Null}">
