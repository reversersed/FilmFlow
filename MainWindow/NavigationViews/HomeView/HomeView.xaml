                    <LinearGradientBrush>
                        <GradientStop Color="{StaticResource LightAccentColorKey}" Offset=".2"/>
                        <GradientStop Color="{StaticResource AccentColorKey}" Offset=".6"/>
                        <GradientStop Color="{StaticResource LightAccentColorKey}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
