    <sys:String x:Key="SettingsTitile">S E T T I N G S</sys:String>
    <sys:String x:Key="ApllyingAfterReboot">Settings will be applied after restart.</sys:String>
    <sys:String x:Key="RestartNow">Restart now?</sys:String>
    <sys:String x:Key="Language">Language</sys:String>
    <!--Home Window-->
    <sys:String x:Key="Reviews">reviews</sys:String>
    <sys:String x:Key="Filters">Filters</sys:String>
    <sys:String x:Key="Genres">Genres</sys:String>
    <sys:String x:Key="MovieNameSearch">Movie name...</sys:String>
    <sys:String x:Key="PopularToday">Popular genre -</sys:String>
    <sys:String x:Key="NewMovies">New movies</sys:String>
