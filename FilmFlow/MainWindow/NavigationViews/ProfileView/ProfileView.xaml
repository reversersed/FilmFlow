<UserControl x:Class="FilmFlow.MainWindow.NavigationViews.ProfileView.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmFlow.MainWindow.NavigationViews.ProfileView"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:customControl="clr-namespace:FilmFlow.CustomControls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:popupConfirm="clr-namespace:ModalControl;assembly=ModalControl" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
             d:DataContext="{d:DesignInstance Type=local:ProfileViewModel}"
             x:Name="ProfileControl"
             d:DesignHeight="800" d:DesignWidth="1400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CustomControls/CustomScroll.xaml"/>
                <ResourceDictionary Source="/CustomControls/ComboBox.xaml"/>
                <ResourceDictionary Source="/CustomControls/ReviewsBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0"
                              Width="0.01*"
                              MaxWidth="478"/>
            <ColumnDefinition MaxWidth="720"
                              MinWidth="350"/>
            <ColumnDefinition MinWidth="0"
                              Width="0.01*"
                              MaxWidth="478"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="{StaticResource MainBackgroundColor}"/>
        <Border Grid.Column="2" Background="{StaticResource MainBackgroundColor}"/>

        <!--Modal PopUp for replenishment-->
        <popupConfirm:Modal Panel.ZIndex="1"
                            IsOpen="{Binding ReplenishModalVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Grid.ColumnSpan="3">
            <StackPanel Width="300"
                        Height="250"
                        Orientation="Vertical"
                        Background="{StaticResource NavigationColor}">
                <Grid   VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Width="300"
                        Height="26"
                        Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="26"/>
                        <ColumnDefinition Width="15"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{StaticResource Payment}"
                               Grid.ColumnSpan="3"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Regular}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="DemiBold"/>
                    <Button VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Grid.Column="1"
                            Visibility="{Binding ReplenishmentSumVisibility}"
                            Command="{Binding ReplenishModalMode}"
                            CommandParameter="False"
                            Padding="4,2,4,2"
                            FontFamily="{StaticResource DefaultFont}"
                            FontWeight="Normal"
                            FontSize="{StaticResource Small}"
                            Cursor="Hand">
                        <Button.Content>
                            <fa:IconImage Icon="Close"
                                          Width="14"
                                          Height="14"
                                          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="Black" Opacity="0.2"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                        <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <Grid Visibility="{Binding ReplenishmentPaymentVisibility}"
                      Height="180"
                      Width="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           gif:AnimationBehavior.SourceUri="\Images\Loading.gif"
                           Width="120"
                           Height="120">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.PaymentSucceed}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock Grid.Row="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Width="280"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource LightTextColor}"
                               FontSize="{StaticResource Small}"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="Light">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.PaymentSucceed}" Value="True">
                                        <Setter Property="Text" Value="{StaticResource PaymentSucceed}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.PaymentSucceed}" Value="False">
                                        <Setter Property="Text" Value="{StaticResource ResponseWaiting}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button BorderThickness="0"
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{StaticResource Cancel}"
                            Command="{Binding AbordPayment}"
                            FontSize="{StaticResource Regular}"
                            FontFamily="{StaticResource DefaultFont}"
                            Cursor="Hand"
                            Margin="0,10,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Background" Value="{StaticResource LightAccentColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                        <Setter Property="Foreground" Value="{StaticResource DarkTextColor}"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext.PaymentSucceed}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5" Padding="10,5,10,5" Background="{TemplateBinding Background}" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <Grid Visibility="{Binding ReplenishmentSumVisibility}"
                      Height="180"
                      Width="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{StaticResource PaymentInfo}"
                               Grid.Row="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Width="280"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Regular}"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="Normal"/>
                    <TextBox Grid.Row="1"
                             Text="{Binding PaymentValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="10"
                             Background="Transparent"
                             BorderThickness="0,0,0,2"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             TextAlignment="Left"
                             FontFamily="{StaticResource DefaultFont}"
                             FontSize="{StaticResource Regular}"
                             FontWeight="DemiBold"
                             Foreground="{StaticResource TextColor}"
                             CaretBrush="{StaticResource TextColor}"
                             Padding="5,2,5,2"
                             Width="150">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Width="{TemplateBinding Width}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Focusable="False"
                                                              HorizontalScrollBarVisibility="Disabled"
                                                              VerticalScrollBarVisibility="Disabled"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button BorderThickness="0"
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{StaticResource Pay}"
                            Command="{Binding ProceedPayment}"
                            FontSize="{StaticResource Regular}"
                            FontFamily="{StaticResource DefaultFont}"
                            Cursor="Hand"
                            Margin="0,10,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource LightAccentColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="{StaticResource DarkAccentColor}"/>
                                        <Setter Property="Foreground" Value="{StaticResource DarkTextColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5" Padding="10,5,10,5" Background="{TemplateBinding Background}" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </popupConfirm:Modal>
        <!--Modal to buy subscription-->
        <popupConfirm:Modal Panel.ZIndex="1"
                            IsOpen="{Binding ConfirmationModalVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Grid.ColumnSpan="3">
            <StackPanel Width="400"
                        Height="300"
                        Orientation="Vertical"
                        Background="{StaticResource NavigationColor}">
                <Grid Height="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{StaticResource Confirmation}"
                               Grid.Row="0"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Regular}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="DemiBold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SubConfirmationText}"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               Padding="10,0,10,0"
                               TextAlignment="Center"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Small}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="Regular"/>
                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Grid.Column="0"
                            Command="{Binding CreateSubscription}"
                            Padding="4,2,4,2"
                            FontFamily="{StaticResource DefaultFont}"
                            FontWeight="Normal"
                            FontSize="{StaticResource Regular}"
                            Content="{StaticResource Yes}"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Grid.Column="1"
                            Command="{Binding ConfirmationModalMode}"
                            CommandParameter="False"
                            Padding="4,2,4,2"
                            FontFamily="{StaticResource DefaultFont}"
                            FontWeight="Normal"
                            FontSize="{StaticResource Regular}"
                            Content="{StaticResource No}"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </StackPanel>
        </popupConfirm:Modal>
        <!--Modal to disable subscription-->
        <popupConfirm:Modal Panel.ZIndex="1"
                            IsOpen="{Binding DisableSubscription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Grid.ColumnSpan="3">
            <StackPanel Width="400"
                        Height="300"
                        Orientation="Vertical"
                        Background="{StaticResource NavigationColor}">
                <Grid Height="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{StaticResource Confirmation}"
                               Grid.Row="0"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Regular}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="DemiBold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding DisableSubText}"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               Padding="10,0,10,0"
                               TextAlignment="Center"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Small}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="Regular"/>
                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Grid.Column="0"
                            Command="{Binding DismissSubscription}"
                            CommandParameter="Remove"
                            Padding="4,2,4,2"
                            FontFamily="{StaticResource DefaultFont}"
                            FontWeight="Normal"
                            FontSize="{StaticResource Regular}"
                            Content="{StaticResource Yes}"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Grid.Column="1"
                            Command="{Binding DismissSubscription}"
                            CommandParameter="False"
                            Padding="4,2,4,2"
                            FontFamily="{StaticResource DefaultFont}"
                            FontWeight="Normal"
                            FontSize="{StaticResource Regular}"
                            Content="{StaticResource No}"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </StackPanel>
        </popupConfirm:Modal>
        <!--Modal to renew subscription-->
        <popupConfirm:Modal Panel.ZIndex="1"
                            IsOpen="{Binding ModalRenewSubscription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Grid.ColumnSpan="3">
            <StackPanel Width="400"
                        Height="300"
                        Orientation="Vertical"
                        Background="{StaticResource NavigationColor}">
                <Grid Height="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{StaticResource Renewal}"
                               Grid.Row="0"
                               Foreground="{StaticResource TextColor}"
                               FontSize="{StaticResource Regular}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontFamily="{StaticResource DefaultFont}"
                               FontWeight="DemiBold"
                               Margin="0,0,0,5"/>
                    <Grid   Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <RadioButton    Grid.Column="0"
                                                GroupName="RenewPeriod"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                IsChecked="True">
                            <RadioButton.Content>
                                <Border BorderBrush="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=BorderBrush}"
                                                BorderThickness="2"
                                                Padding="10,5,10,5"
                                                CornerRadius="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock  Grid.Row="0"
                                                            Text="{StaticResource 1month}"
                                                            Foreground="{StaticResource TextColor}"
                                                            FontSize="{StaticResource Regular}"
                                                            FontWeight="Light"
                                                            FontFamily="{StaticResource DefaultFont}"
                                                            HorizontalAlignment="Center"/>
                                        <TextBlock  Grid.Row="1"
                                                            Foreground="{StaticResource LightTextColor}"
                                                            FontSize="{StaticResource Small}"
                                                            FontWeight="Light"
                                                            FontFamily="{StaticResource DefaultFont}"
                                                            HorizontalAlignment="Center">
                                                    <Run Text="{Binding RenewPrices[0]}"/>
                                                    <Run Text="₽"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </RadioButton.Content>
                            <RadioButton.Style>
                                <Style TargetType="{x:Type RadioButton}">
                                    <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type RadioButton}">
                                                <BulletDecorator Background="Transparent"
                                                                         Height="Auto"
                                                                         Width="Auto">
                                                    <ContentPresenter/>
                                                </BulletDecorator>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource LightAccentColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </RadioButton.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding RenewPeriodChecked}" CommandParameter="0"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </RadioButton>
                        <RadioButton    Grid.Column="1"
                                                GroupName="RenewPeriod"
                                                Margin="15,0,0,0"
                                                HorizontalAlignment="Center">
                            <RadioButton.Content>
                                <Border BorderBrush="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=BorderBrush}"
                                                BorderThickness="2"
                                                Padding="10,5,10,5"
                                                CornerRadius="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock  Grid.Row="0"
                                                            Text="{StaticResource 6months}"
                                                            Foreground="{StaticResource TextColor}"
                                                            FontSize="{StaticResource Regular}"
                                                            FontWeight="Light"
                                                            FontFamily="{StaticResource DefaultFont}"
                                                            HorizontalAlignment="Center"/>
                                        <StackPanel Orientation="Horizontal"
                                                            Grid.Row="1"
                                                            HorizontalAlignment="Center">
                                            <TextBlock  Foreground="{StaticResource LightTextColor}"
                                                                FontSize="{StaticResource Small}"
                                                                FontWeight="Light"
                                                                FontFamily="{StaticResource DefaultFont}">
                                                        <Run Text="{Binding RenewPrices[1]}"/>
                                                        <Run Text="₽"/>
                                            </TextBlock>
                                            <TextBlock  Foreground="{StaticResource DarkTextColor}"
                                                                FontSize="{StaticResource Small}"
                                                                FontWeight="Light"
                                                                Margin="10,0,0,0"
                                                                TextDecorations="Strikethrough"
                                                                FontFamily="{StaticResource DefaultFont}">
                                                        <Run Text="{Binding RenewOldPrices[1]}"/>
                                                        <Run Text="₽"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock  Grid.Row="2"
                                                            Text="{StaticResource EconomyTo10}"
                                                            Foreground="{StaticResource LightTextColor}"
                                                            FontSize="{StaticResource Small}"
                                                            FontWeight="Light"
                                                            FontFamily="{StaticResource DefaultFont}"
                                                            HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </RadioButton.Content>
                            <RadioButton.Style>
                                <Style TargetType="{x:Type RadioButton}">
